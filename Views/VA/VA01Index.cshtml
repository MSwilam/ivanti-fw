@model Ivanti_FW.Models.VA01SearchModel


@{
    var VulnerabilityListCollection = EA.GetVulnerabilityList();
    var SeverityCollection = EA.GetSeverity();
    var VulnerabilityTypeCollection = EA.GetVulnerabilityType();
    var YesNoAnswerCollection = EA.GetYesNoAnswer();
}


<div class="search-form" id="div-search-emp">

    <form url="@Url.Action("VA01ReqIndex")" id="VA01SubmitIndex">
        <div class="row search-sec">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                        @Html.DropDownListFor((m) => m.VA01.VulnerabilityListId, new SelectList(VulnerabilityListCollection, "Key", "Value"), EA.GetMessage("All"), new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                        @Html.DropDownListFor((m) => m.VA01.SeverityId, new SelectList(SeverityCollection, "Key", "Value"), EA.GetMessage("All"), new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                        @Html.DropDownListFor((m) => m.VA01.VulnerabilityTypeId, new SelectList(VulnerabilityTypeCollection, "Key", "Value"), EA.GetMessage("All"), new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                        @Html.DropDownListFor((m) => m.VA01.NoActionNeeded, new SelectList(YesNoAnswerCollection, "Key", "Value"), EA.GetMessage("All"), new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                        @Html.DropDownListFor((m) => m.VA01.FeedbackNeeded, new SelectList(YesNoAnswerCollection, "Key", "Value"), string.Format("{0} - {1}", EA.GetMessage("FeedbackNeeded"), EA.GetMessage("All")), new { @class = "form-control input-sm" })
                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">

                        <button type="button" class="btn btn-primary wrn-btn btn-serach-submit"> <i class="fa fa-search" aria-hidden="true"></i> @Html.GSText("Search")</button>
                        <button type="button" formaction="@Url.Action("PrintVA01ReqIndex", "VA")" class="btn btn-default wrn-btn  GSSubmit"><i class="fa fa-print no-print" aria-hidden="true"></i>@Html.GSText("Print")</button>
                    </div>
                </div>
            </div>
        </div>
        @Html.HiddenFor((m) => m.FieldType)
        @Html.HiddenFor((m) => m.PageIndex)
        @Html.HiddenFor((m) => m.PageSize)
        @Html.HiddenFor((m) => m.SortField)
        @Html.HiddenFor((m) => m.SortDirection)
        <div class="search-results" id="div-search-results">
        </div>
    </form>




</div>

<script type="text/javascript">
    SubmitIndex($('#VA01SubmitIndex'));
</script>













