@model Ivanti_FW.Models.MNTR01SearchModel


@{
	 var  TLPCollection = EA.GetTLP(); 
	 var  VulnerabilityListCollection = EA.GetVulnerabilityList(); 
	 var  SeverityCollection = EA.GetSeverity(); 
	 var  VulnerabilityTypeCollection = EA.GetVulnerabilityType(); 
	}
	

<div class="search-form" id="div-search-emp">

    <form url="@Url.Action("MNTR01ReqIndex")" id="MNTR01SubmitIndex">
        <div class="row search-sec">
  	<div class="col-lg-12">
 		<div class="row">
		 <div class="col-lg-3 col-md-3 col-sm-12 p-0">
		 @Html.DropDownListFor((m) => m.MNTR01.TLPId, new SelectList(TLPCollection, "Key", "Value"), EA.GetMessage("All"), new { @class = "form-control input-sm" })
	 </div>
		 <div class="col-lg-3 col-md-3 col-sm-12 p-0">
		 @Html.DropDownListFor((m) => m.MNTR01.VulnerabilityListId, new SelectList(VulnerabilityListCollection, "Key", "Value"), EA.GetMessage("All"), new { @class = "form-control input-sm" })
	 </div>
		 <div class="col-lg-3 col-md-3 col-sm-12 p-0">
		 @Html.DropDownListFor((m) => m.MNTR01.SeverityId, new SelectList(SeverityCollection, "Key", "Value"), EA.GetMessage("All"), new { @class = "form-control input-sm" })
	 </div>
		 <div class="col-lg-3 col-md-3 col-sm-12 p-0">
		 @Html.DropDownListFor((m) => m.MNTR01.VulnerabilityTypeId, new SelectList(VulnerabilityTypeCollection, "Key", "Value"), EA.GetMessage("All"), new { @class = "form-control input-sm" })
	 </div>
		
  		<div class="col-lg-3 col-md-3 col-sm-12 p-0">

                                 <button type="button" class="btn btn-primary wrn-btn btn-serach-submit"> <i class="fa fa-search" aria-hidden="true"></i> @Html.GSText("Search")</button>
                                <button type="button" formaction="@Url.Action("PrintMNTR01ReqIndex", "MNTR")" class="btn btn-default wrn-btn  GSSubmit"><i class="fa fa-print no-print" aria-hidden="true"></i>@Html.GSText("Print")</button>
                            </div>
				</div>
                    </div>
                </div>
               @Html.HiddenFor((m) => m.FieldType)
                    @Html.HiddenFor((m) => m.PageIndex)
                    @Html.HiddenFor((m) => m.PageSize)
                    @Html.HiddenFor((m) => m.SortField)
                    @Html.HiddenFor((m) => m.SortDirection)
		<div class="search-results" id="div-search-results">
		</div>
    </form>



</div>

<script type="text/javascript">
    SubmitIndex($('#MNTR01SubmitIndex'));

</script>















