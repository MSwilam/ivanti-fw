@model Ivanti_FW.Models.IS04ModelReq

@{
    ViewBag.Title = EA.GetMessage("CREATE");
    //Layout = "~/Views/Shared/_LayoutWork.cshtml";
}


<style>
    .tooltip-master {
        display: none;
    }
</style>

@section toolbar{

    <div class="page-header mb-0">
        <div class="col-md-12">
            <div class="row align-items-end">
                <div class="col-xl-9">
                    <div class="d-flex page-header-element align-items-center">
                        <img src="//cdn.saudisystems.net/V4/assets/images/svgs/service_line/Indv/sims.svg" width="64" height="64" class="me-2">
                        <div>
                            <a href="/IS/IS04dashboard" class="back_btn pb-1 align-items-end mt-0 fs-12">
                                <i class="mutasil-icon mutasil-icon-40 fa-lg"></i>
                                @Html.GSText("BACK_TO_IS04")
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



<form asp-action="CreateIS04" asp-controller="IS" method="POST" data-ajax="true" data-ajax-complete="fnCompleted" class="CreatePage" id="IS04FrmID">

    @Html.AntiForgeryToken()


                            <!-- form start -->
                            <section class="form-horizontal center">
                                <div class="box-body">
                                    <div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("UserID")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.IS04.UserID, "", new { @class = "text-danger" })
			@Html.EditorFor(model => model.IS04.UserID, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("UserID") } })
		</div>
	</div>
	<div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("Email")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.IS04.Email, "", new { @class = "text-danger" })
			@Html.EditorFor(model => model.IS04.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("Email"), @maxlength = 200 } })
		</div>
	</div>
	<div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("FollowUpNotes")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.IS04.FollowUpNotes, "", new { @class = "text-danger" })
			@Html.EditorFor(model => model.IS04.FollowUpNotes, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("FollowUpNotes"), @maxlength = 200 } })
		</div>
	</div>
	<div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("SLA")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.IS04.SLA, "", new { @class = "text-danger" })
			@Html.EditorFor(model => model.IS04.SLA, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("SLA") } })
		</div>
	</div>
	
				    
                                </div>

                            </section>
                      
<div class="modal-footer border-0 float-start">
         <button class="btn btn-primary btn-submit">@Html.GSText("ADD_IS04")</button>
        <a href="/IS/IS04dashboard" class="btn btn-outline-primary">@Html.GSText("Cancel")</a>
       
    </div>

   
       
</form>



    <script type="text/javascript">
	$(document).ready(function () {
	
	
  	});

     function fnCompleted(msg) {
        NotifyMsg(msg.responseJSON.statusTitle, msg.responseJSON.statusMessage, msg.responseJSON.status);
        setTimeout(function () {
            window.location.href = "/IS/IS04Dashboard";
        }, 1000);
    };
</script>
