@model Ivanti_FW.Models.TIS02ModelReq

@{
    ViewBag.Title = EA.GetMessage("CREATE");
    //Layout = "~/Views/Shared/_LayoutWork.cshtml";
}


<style>
    .tooltip-master {
        display: none;
    }
</style>

@section toolbar{

    <div class="page-header mb-0">
        <div class="col-md-12">
            <div class="row align-items-end">
                <div class="col-xl-9">
                    <div class="d-flex page-header-element align-items-center">
                        <img src="//portalscdnstg.citc.gov.sa/V4/assets/images/svgs/service_line/Indv/sims.svg" width="64" height="64" class="me-2">
                        <div>
                            <a href="/TIS/TIS02dashboard" class="back_btn pb-1 align-items-end mt-0 fs-12">
                                <i class="mutasil-icon mutasil-icon-40 fa-lg"></i>
                                @Html.GSText("BACK_TO_TIS02")
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@{
    var ConfidenceCollection = EA.GetConfidence();
    var ImportanceCollection = EA.GetImportance();
    var TLPCollection = EA.GetTLP();
}


<form asp-action="CreateTIS02" asp-controller="TIS" method="POST" data-ajax="true" data-ajax-complete="fnCompleted" class="CreatePage" id="TIS02FrmID">

    @Html.AntiForgeryToken()


    <!-- form start -->
    <section class="form-horizontal center">
        <div class="box-body">
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("USERNAME")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TIS02.UserName, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.TIS02.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("USERNAME"), @maxlength = 200 } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("EMAIL")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TIS02.Email, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.TIS02.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("EMAIL"), @maxlength = 200 } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("Confidence")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TIS02.ConfidenceId, "", new { @class = "text-danger" })
                    @Html.DropDownListFor((m) => m.TIS02.ConfidenceId, new SelectList(ConfidenceCollection, "Key", "Value"), string.Format("{0} - {1}", EA.GetMessage("Confidence"), EA.GetMessage("All")), new { @class = "form-control input-sm" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("Importance")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TIS02.ImportanceId, "", new { @class = "text-danger" })
                    @Html.DropDownListFor((m) => m.TIS02.ImportanceId, new SelectList(ImportanceCollection, "Key", "Value"), string.Format("{0} - {1}", EA.GetMessage("Importance"), EA.GetMessage("All")), new { @class = "form-control input-sm" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("SOURCE")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TIS02.Source, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.TIS02.Source, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("SOURCE"), @maxlength = 200 } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("TISDESCRIPTION")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TIS02.TISDescription, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.TIS02.TISDescription, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("TISDESCRIPTION"), @maxlength = 200 } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("NOTES")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TIS02.Notes, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.TIS02.Notes, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("NOTES"), @maxlength = 200 } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("TLP")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TIS02.TLPId, "", new { @class = "text-danger" })
                    @Html.DropDownListFor((m) => m.TIS02.TLPId, new SelectList(TLPCollection, "Key", "Value"), string.Format("{0} - {1}", EA.GetMessage("TLP"), EA.GetMessage("All")), new { @class = "form-control input-sm" })
                </div>
            </div>

            <div class="form-group File-upload-inline">
                <div class="text-divider col-sm-12"><span>@Html.GSText("TIS02_FILES")</span></div>
                <div class=" file-attachment-section">
                    <div class="col-sm-12 div-upload-file">
                        @{
                            Html.RenderPartial("UploadFileInline", new GSFunction.Models.UploadFileModel { FileTypes = ".doc,.pdf,.docx,.xls,.xlsx,.jpeg,.jpg,.png,.gif,.tif" });
                        }
                    </div>
                </div>
            </div>

        </div>

    </section>

    <div class="modal-footer border-0 float-start">
        <button class="btn btn-primary btn-submit">@Html.GSText("ADD_TIS02")</button>
        <a href="/TIS/TIS02dashboard" class="btn btn-outline-primary">@Html.GSText("Cancel")</a>

    </div>



</form>



<script type="text/javascript">
    $(document).ready(function () {


    });

    function fnCompleted(msg) {
        NotifyMsg(msg.responseJSON.statusTitle, msg.responseJSON.statusMessage, msg.responseJSON.status);
        setTimeout(function () {
            window.location.href = "/TIS/TIS02Dashboard";
        }, 1000);
    };
</script>
