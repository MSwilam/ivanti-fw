        function DeleteFnc(element, url, PrimaryID) {
            var reqid = $(element).closest('tr').attr("reqid");
            var arrayParam = {};
            arrayParam[PrimaryID] = reqid;
            $.ajax({
                url: url,
                data: arrayParam,
                type: 'POST',
                success: function (msg) {
                    NotifyMsg(msg.statusTitle, msg.statusMessage, msg.status);
                    setTimeout(function () {
                        location.reload();
                    }, 1000)
                }
            });
        }

