@model GSFunction.Models.UploadFileModel

<style>
    .lkw-button{
        display:none;
    }
    .progress {
        height: 10px;
        margin-bottom: 10px;
        overflow: hidden;
        background-color: #f5f5f5;
        border-radius: 4px;
    }

    .progress-bar {
        height: 100%;
        transition: width 0.6s ease;
    }
</style>


<div class="panel div-upload-file" url="@Url.Action("Upload", "FileUpload")">
    <div class="panel-body">
        <table class="table">
            <tr>
                <td id="pnlUpload">
                    <div style="position: relative;">
                       <div class="file-upload-btn">
                            <input id="file_upload" name="FileData" type="file" multiple accept="@((Model!= null)?Model.FileTypes:"*.*")" />
                            <input type="hidden" id="hdn-ftypes" value="@((Model!= null)?Model.FileTypes:"*.*")" />
                        </div>
                          <div class="progress">
                <div class="progress-bar" role="progressbar"></div>
            </div>
                    </div>
                </td>
            </tr>

        </table>
        <div>
            <table class="table" id="tbl-upfilenames">
                @if (Model != null &&
                    Model.FileCollection != null &&
                    Model.FileCollection.Count > 0)
                {
                    foreach (var item in Model.FileCollection)
                    {
                        <tr>
                            <td>@item.FileName</td>
                            <td><i class="fa fa-trash"></i></td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>






