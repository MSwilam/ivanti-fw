@model Ivanti_FW.Models.TH06ModelReq

@{
    ViewBag.Title = EA.GetMessage("CREATE");
    //Layout = "~/Views/Shared/_LayoutWork.cshtml";
}


<style>
    .tooltip-master {
        display: none;
    }
</style>

@section toolbar{

    <div class="page-header mb-0">
        <div class="col-md-12">
            <div class="row align-items-end">
                <div class="col-xl-9">
                    <div class="d-flex page-header-element align-items-center">
                        <img src="//cdn.saudisystems.net/V4/assets/images/svgs/service_line/Indv/sims.svg" width="64" height="64" class="me-2">
                        <div>
                            <a href="/TH/TH06dashboard" class="back_btn pb-1 align-items-end mt-0 fs-12">
                                <i class="mutasil-icon mutasil-icon-40 fa-lg"></i>
                                @Html.GSText("BACK_TO_TH06")
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@{
	 var  YesNoAnswerCollection = EA.GetYesNoAnswer(); 
	 var  ClosureReasonCollection = EA.GetClosureReason(); 
	}
	

<form asp-action="CreateTH06" asp-controller="TH" method="POST" data-ajax="true" data-ajax-complete="fnCompleted" class="CreatePage" id="TH06FrmID">

    @Html.AntiForgeryToken()


                            <!-- form start -->
                            <section class="form-horizontal center">
                                <div class="box-body">
                                    <div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("YesNoAnswer")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.TH06.ThreatHuntingRequired, "", new { @class = "text-danger" })
			@Html.DropDownListFor((m) => m.TH06.ThreatHuntingRequired, new SelectList(YesNoAnswerCollection, "Key", "Value"), string.Format("{0} - {1}", EA.GetMessage("YesNoAnswer"), EA.GetMessage("All")), new { @class = "form-control input-sm" })
		</div>
	</div>
	<div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("ThreatIdentified")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.TH06.ThreatIdentified, "", new { @class = "text-danger" })
			@Html.DropDownListFor((m) => m.TH06.ThreatIdentified, new SelectList(YesNoAnswerCollection, "Key", "Value"), string.Format("{0} - {1}", EA.GetMessage("YesNoAnswer"), EA.GetMessage("All")), new { @class = "form-control input-sm" })
		</div>
	</div>
	<div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("IncedentDetected")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.TH06.IncedentDetected, "", new { @class = "text-danger" })
			@Html.DropDownListFor((m) => m.TH06.IncedentDetected, new SelectList(YesNoAnswerCollection, "Key", "Value"), string.Format("{0} - {1}", EA.GetMessage("YesNoAnswer"), EA.GetMessage("All")), new { @class = "form-control input-sm" })
		</div>
	</div>
	<div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("AnalystNote")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.TH06.AnalystNote, "", new { @class = "text-danger" })
			@Html.EditorFor(model => model.TH06.AnalystNote, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("AnalystNote"), @maxlength = 200 } })
		</div>
	</div>
	<div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("TeamLeaderNote")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.TH06.TeamLeaderNote, "", new { @class = "text-danger" })
			@Html.EditorFor(model => model.TH06.TeamLeaderNote, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("TeamLeaderNote"), @maxlength = 200 } })
		</div>
	</div>
	<div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("ClosureReason")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.TH06.ClosureReasonId, "", new { @class = "text-danger" })
			@Html.DropDownListFor((m) => m.TH06.ClosureReasonId, new SelectList(ClosureReasonCollection, "Key", "Value"), string.Format("{0} - {1}", EA.GetMessage("ClosureReason"), EA.GetMessage("All")), new { @class = "form-control input-sm" })
		</div>
	</div>
	<div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("ClosingNote")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.TH06.ClosingNote, "", new { @class = "text-danger" })
			@Html.EditorFor(model => model.TH06.ClosingNote, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("ClosingNote"), @maxlength = 200 } })
		</div>
	</div>
	
				    
                                </div>

                            </section>
                      
<div class="modal-footer border-0 float-start">
         <button class="btn btn-primary btn-submit">@Html.GSText("ADD_TH06")</button>
        <a href="/TH/TH06dashboard" class="btn btn-outline-primary">@Html.GSText("Cancel")</a>
       
    </div>

   
       
</form>



    <script type="text/javascript">
	$(document).ready(function () {
	
	
  	});

     function fnCompleted(msg) {
        NotifyMsg(msg.responseJSON.statusTitle, msg.responseJSON.statusMessage, msg.responseJSON.status);
        setTimeout(function () {
            window.location.href = "/TH/TH06Dashboard";
        }, 1000);
    };
</script>
