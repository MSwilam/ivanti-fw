@model Ivanti_FW.Models.TH01ModelReq

@{
    ViewBag.Title = EA.GetMessage("CREATE");
    //Layout = "~/Views/Shared/_LayoutWork.cshtml";
}




@section toolbar{

    <div class="page-header mb-0">
        <div class="col-md-12">
            <div class="row align-items-end">
                <div class="col-xl-9">
                    <div class="d-flex page-header-element align-items-center">
                        <img src="//portalscdnstg.citc.gov.sa/V4/assets/images/svgs/service_line/Indv/sims.svg" width="64" height="64" class="me-2">
                        <div>
                            <a href="/TH/TH01dashboard" class="back_btn pb-1 align-items-end mt-0 fs-12">
                                <i class="mutasil-icon mutasil-icon-40 fa-lg"></i>
                                @Html.GSText("BACK_TO_TH01")
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@{
    var TLPCollection = EA.GetTLP();
}


<form asp-action="CreateTH01" asp-controller="TH" method="POST" data-ajax="true" data-ajax-complete="fnCompleted" class="CreatePage" class="CreatePage" id="TH01FrmID" enctype="multipart/form-data">

    @Html.AntiForgeryToken()


    <!-- form start -->
    <section class="form-horizontal center" style="margin-bottom:50px;">
        <div class="box-body">
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("UserID")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TH01.UserID, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.TH01.UserID, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("UserID") } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("UserName")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TH01.UserName, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.TH01.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("UserName"), @maxlength = 200 } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("EntityName")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TH01.EntityName, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.TH01.EntityName, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("EntityName"), @maxlength = 200 } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("Email")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TH01.Email, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.TH01.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("Email"), @maxlength = 200 } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("ThreatHuntingHypothesis")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TH01.ThreatHuntingHypothesis, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.TH01.ThreatHuntingHypothesis, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("ThreatHuntingHypothesis"), @maxlength = 200 } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("ThreatExecutionLogic")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TH01.ThreatExecutionLogic, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.TH01.ThreatExecutionLogic, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("ThreatExecutionLogic"), @maxlength = 200 } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("ThreatDetectingLogic")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TH01.ThreatDetectingLogic, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.TH01.ThreatDetectingLogic, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("ThreatDetectingLogic"), @maxlength = 200 } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("Details")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TH01.Details, "", new { @class = "text-danger" })
                    @Html.TextAreaFor(model => model.TH01.Details,  new { @class = "form-control mb-4", @placeholder = @Html.GSText("Details"), @maxlength = 4000 ,@rows = 4 } )
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">@Html.GSText("TLP")</label>
                <div class="col-sm-8">
                    @Html.ValidationMessageFor(model => model.TH01.TLPId, "", new { @class = "text-danger" })
                    @Html.DropDownListFor((m) => m.TH01.TLPId, new SelectList(TLPCollection, "Key", "Value"), string.Format("{0} - {1}", EA.GetMessage("TLP"), EA.GetMessage("All")), new { @class = "form-control input-sm" })
                </div>
            </div>

            <div class="form-group File-upload-inline">
                <div class="text-divider col-sm-12"><span>@Html.GSText("TH_FILES")</span></div>
                <div class=" file-attachment-section">
                    <div class="col-sm-12 div-upload-file">
                        @{
                            Html.RenderPartial("UploadFileInline", new GSFunction.Models.UploadFileModel { FileTypes = ".doc,.pdf,.docx,.xls,.xlsx,.jpeg,.jpg,.png,.gif,.tif" });
                        }
                    </div>
                </div>
            </div>

        </div>
        <div class="float-end">
            <button class="btn btn-primary btn-submit">@Html.GSText("ADD_TH01")</button>
            <a href="/TH/TH01dashboard" class="btn btn-outline-primary">@Html.GSText("Cancel")</a>


        </div>
    </section>




</form>



  
<script type="text/javascript">
    $(document).ready(function () {
        $('.div-upload-file').initUpload({});
    });

    function fnCompleted(msg) {
        NotifyMsg(msg.responseJSON.statusTitle, msg.responseJSON.statusMessage, msg.responseJSON.status);
        setTimeout(function () {
            window.location.href = "/TH/TH01Dashboard";
        }, 1000);
    };
</script>
