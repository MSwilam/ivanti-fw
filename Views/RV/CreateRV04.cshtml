@model Ivanti_FW.Models.RV04ModelReq

@{
    ViewBag.Title = EA.GetMessage("CREATE");
    //Layout = "~/Views/Shared/_LayoutWork.cshtml";
}


<style>
    .tooltip-master {
        display: none;
    }
</style>

@section toolbar{

    <div class="page-header mb-0">
        <div class="col-md-12">
            <div class="row align-items-end">
                <div class="col-xl-9">
                    <div class="d-flex page-header-element align-items-center">
                        <img src="//cdn.saudisystems.net/V4/assets/images/svgs/service_line/Indv/sims.svg" width="64" height="64" class="me-2">
                        <div>
                            <a href="/RV/RV04dashboard" class="back_btn pb-1 align-items-end mt-0 fs-12">
                                <i class="mutasil-icon mutasil-icon-40 fa-lg"></i>
                                @Html.GSText("BACK_TO_RV04")
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



<form asp-action="CreateRV04" asp-controller="RV" method="POST" data-ajax="true" data-ajax-complete="fnCompleted" class="CreatePage" id="RV04FrmID">

    @Html.AntiForgeryToken()


                            <!-- form start -->
                            <section class="form-horizontal center">
                                <div class="box-body">
                                    <div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("USERID")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.RV04.UserID, "", new { @class = "text-danger" })
			@Html.EditorFor(model => model.RV04.UserID, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("USERID") } })
		</div>
	</div>
	<div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("FEEDBACK")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.RV04.Feedback, "", new { @class = "text-danger" })
			@Html.EditorFor(model => model.RV04.Feedback, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("FEEDBACK"), @maxlength = 200 } })
		</div>
	</div>
	<div class="form-group">
	<label class="col-sm-4 control-label">@Html.GSText("REMEDIATIONDUEDATE")</label>
		<div class="col-sm-8">
			@Html.ValidationMessageFor(model => model.RV04.RemediationDueDate, "", new { @class = "text-danger" })
			@Html.EditorFor(model => model.RV04.RemediationDueDate, new { htmlAttributes = new { @class = "form-control", @placeholder = @Html.GSText("REMEDIATIONDUEDATE") } })
		</div>
	</div>
	
				    <div class="form-group File-upload-inline">
	                <div class="text-divider col-sm-12"><span>@Html.GSText("RV04_FILES")</span></div>
	                <div class=" file-attachment-section">
	                    <div class="col-sm-12 div-upload-file">
	                        @{ Html.RenderPartial("UploadFileInline", new GSFunction.Models.UploadFileModel { FileTypes = ".doc,.pdf,.docx,.xls,.xlsx,.jpeg,.jpg,.png,.gif,.tif" });}
	                    </div>
	                </div>
	            </div>
	
                                </div>

                            </section>
                      
<div class="modal-footer border-0 float-start">
         <button class="btn btn-primary btn-submit">@Html.GSText("ADD_RV04")</button>
        <a href="/RV/RV04dashboard" class="btn btn-outline-primary">@Html.GSText("Cancel")</a>
       
    </div>

   
       
</form>



    <script type="text/javascript">
	$(document).ready(function () {
	
	
  	});

     function fnCompleted(msg) {
        NotifyMsg(msg.responseJSON.statusTitle, msg.responseJSON.statusMessage, msg.responseJSON.status);
        setTimeout(function () {
            window.location.href = "/RV/RV04Dashboard";
        }, 1000);
    };
</script>
